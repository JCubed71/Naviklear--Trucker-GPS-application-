<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="24"
        android:key="text_size_preferences"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Sets the text size for the main activity screen"
        android:title="Text Size (Main Activity)" />
    <EditTextPreference
        android:defaultValue="15"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Map Zoom"
        app:key="map_zoom_preference"
        app:summary="Sets the zoom value of map (default: 15)" />
</PreferenceScreen>